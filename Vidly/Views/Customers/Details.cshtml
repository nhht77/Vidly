@model Vidly.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.MemberShipType</li>
    @if (Model.DateOfBirth.HasValue)
    {
        <li>Birthdate: @Model.DateOfBirth.Value.ToShortDateString()</li>
    }
</ul> 